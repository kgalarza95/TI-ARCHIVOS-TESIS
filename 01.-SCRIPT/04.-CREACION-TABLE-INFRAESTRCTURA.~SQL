CREATE TABLE TI_APP_COLABORADOR(
  ID                   NUMBER NOT NULL,
  ID_CARGO             NUMBER,
  ID_A_DEPARTAMENTO    NUMBER, --ID_AREA
  ID_TELEFONO          NUMBER, --EXTENSION   
  NOMBRES              VARCHAR2(100),
  APELLIDOS            VARCHAR2(100),
  DOMINIO              VARCHAR2(50),
  CORREO               VARCHAR2(100),
  AGENCIA              VARCHAR2(50),
  ESTADO               CHAR(1) DEFAULT 'S' NOT NULL,
  FECHA_INGRESO        DATE DEFAULT SYSDATE,
  USUARIO_INGRESO      VARCHAR2(30) DEFAULT 'ADMIN',
  FECHA_MODIFICACION   DATE DEFAULT SYSDATE,
  USUARIO_MODIFICACION VARCHAR2(30) DEFAULT 'ADMIN',
  PRIMARY KEY(ID)
);

--DROP TABLE TI_APP_COLABORADOR;

CREATE TABLE TI_APP_AREA(
  ID                   NUMBER NOT NULL,
  AREA                 VARCHAR2(100) NOT NULL,
  DEPARTAMENTO         VARCHAR2(100),
  NOMECLATURA          VARCHAR2(10),
  ESTADO               CHAR(1) DEFAULT 'S' NOT NULL,
  FECHA_INGRESO        DATE DEFAULT SYSDATE,
  USUARIO_INGRESO      VARCHAR2(30) DEFAULT 'ADMIN',
  FECHA_MODIFICACION   DATE DEFAULT SYSDATE,
  USUARIO_MODIFICACION VARCHAR2(30) DEFAULT 'ADMIN',
  PRIMARY KEY(ID)
);

CREATE TABLE TI_APP_CARGO(
  ID                   NUMBER NOT NULL,
  CARGO                VARCHAR2(100),
  STAR1                VARCHAR2(100),
  ESTADO               CHAR(1) DEFAULT 'S' NOT NULL,
  FECHA_INGRESO        DATE DEFAULT SYSDATE,
  USUARIO_INGRESO      VARCHAR2(30) DEFAULT 'ADMIN',
  FECHA_MODIFICACION   DATE DEFAULT SYSDATE,
  USUARIO_MODIFICACION VARCHAR2(30) DEFAULT 'ADMIN',
  PRIMARY KEY(ID)
);

CREATE TABLE TI_APP_IP(
  ID                   NUMBER NOT NULL,
  SEGMENTO             VARCHAR2(100),
  IP                   VARCHAR2(50),
  ESTADO               CHAR(1) DEFAULT 'S' NOT NULL,
  FECHA_INGRESO        DATE DEFAULT SYSDATE,
  USUARIO_INGRESO      VARCHAR2(30) DEFAULT 'ADMIN',
  FECHA_MODIFICACION   DATE DEFAULT SYSDATE,
  USUARIO_MODIFICACION VARCHAR2(30) DEFAULT 'ADMIN',
  PRIMARY KEY(ID)
);

CREATE TABLE TI_APP_HARDWAR(
  ID                   NUMBER NOT NULL,
  --ID_CARACTERISTICAS   NUMBER,
  ID_COLABORADOR       NUMBER, --RESPONSABLE
  DISPOSITIVO          VARCHAR2(100), --GRUPO - LAPTOP, PC, TECLADO, MOUSE, TEL, IMPRE, ETC
  MARCA                VARCHAR2(80),
  MODELO               VARCHAR2(80),
  SERIE                VARCHAR2(80),
  ADICIONAL            VARCHAR2(100),
  ESTADO               CHAR(1) DEFAULT 'S' NOT NULL,
  FECHA_INGRESO        DATE DEFAULT SYSDATE,
  USUARIO_INGRESO      VARCHAR2(30) DEFAULT 'ADMIN',
  FECHA_MODIFICACION   DATE DEFAULT SYSDATE,
  USUARIO_MODIFICACION VARCHAR2(30) DEFAULT 'ADMIN',
  PRIMARY KEY(ID)
);

CREATE TABLE TI_APP_CARACTERISTICAS(
  ID                   NUMBER NOT NULL,
  ID_HARDWAR           NUMBER,
  IP                   VARCHAR2(80),
  DOMINIO_HOST         VARCHAR2(80),
  CAPACIDAD_DD         NUMBER,
  TIPO_DD              VARCHAR2(80),
  RAM                  VARCHAR2(10),
  SO                   VARCHAR2(80),
  PROCESADOR           VARCHAR2(80),
  DESCRIPCION          VARCHAR2(300),
  
  ESTADO               CHAR(1) DEFAULT 'S' NOT NULL,
  FECHA_INGRESO        DATE DEFAULT SYSDATE,
  USUARIO_INGRESO      VARCHAR2(30) DEFAULT 'ADMIN',
  FECHA_MODIFICACION   DATE DEFAULT SYSDATE,
  USUARIO_MODIFICACION VARCHAR2(30) DEFAULT 'ADMIN',
  PRIMARY KEY(ID)
);

--

CREATE TABLE TI_APP_TELEFONO(
  ID                   NUMBER NOT NULL, 
  MARCA                VARCHAR2(80),
  MODELO               VARCHAR2(80),
  SERIE                VARCHAR2(80),
  EXTENSION            VARCHAR2(80),
  IP                   VARCHAR2(80),
  USUARIO              VARCHAR2(80),
  CLAVE                VARCHAR2(80),
  DESCRIPCION          VARCHAR2(300),
  ESTADO               CHAR(1) DEFAULT 'S' NOT NULL,
  FECHA_INGRESO        DATE DEFAULT SYSDATE,
  USUARIO_INGRESO      VARCHAR2(30) DEFAULT 'ADMIN',
  FECHA_MODIFICACION   DATE DEFAULT SYSDATE,
  USUARIO_MODIFICACION VARCHAR2(30) DEFAULT 'ADMIN',
  PRIMARY KEY(ID)
);

CREATE TABLE TI_APP_MANTENIMIENTO(--ACTAS MANTENIMIENTOS
  ID                   NUMBER NOT NULL, 
  ID_OPERADOR          NUMBER,
  ID_COLABORADOR       NUMBER,
  ID_HARDWARE          NUMBER,
  --PC - LAPTOP
  ENCIENDE             CHAR(1) DEFAULT 'S',
  OBSERVACION_1        VARCHAR2(300),
  PUERTOS              CHAR(1) DEFAULT 'S',
  OBSERVACION_2        VARCHAR2(300),
  BOTONES              CHAR(1) DEFAULT 'S',
  OBSERVACION_3        VARCHAR2(300),
  MONITOR              CHAR(1) DEFAULT 'S',
  OBSERVACION_4        VARCHAR2(300),
  TECLADO              CHAR(1) DEFAULT 'S',
  OBSERVACION_5        VARCHAR2(300),
  MOUSE                CHAR(1) DEFAULT 'S',
  OBSERVACION_6        VARCHAR2(300),
  DURACION             VARCHAR2(25),
  OBSERVACION_GEN      VARCHAR2(600),
  ADICIONAL            VARCHAR2(600),
  ESTADO               CHAR(1) DEFAULT 'S' NOT NULL,
  FECHA_INGRESO        DATE DEFAULT SYSDATE,
  USUARIO_INGRESO      VARCHAR2(30) DEFAULT 'ADMIN',
  FECHA_MODIFICACION   DATE DEFAULT SYSDATE,
  USUARIO_MODIFICACION VARCHAR2(30) DEFAULT 'ADMIN',
  PRIMARY KEY(ID)
);

CREATE TABLE TI_APP_CALIFICACION(--ACTAS MANTENIMIENTOS
  ID                   NUMBER NOT NULL, 
  ID_MANTENIMIENTO     NUMBER,
  CALIFICACION         VARCHAR2(10),
  OBSERVACION          VARCHAR2(300),
  ESTADO               CHAR(1) DEFAULT 'S' NOT NULL,
  FECHA_INGRESO        DATE DEFAULT SYSDATE,
  USUARIO_INGRESO      VARCHAR2(30) DEFAULT 'ADMIN',
  FECHA_MODIFICACION   DATE DEFAULT SYSDATE,
  USUARIO_MODIFICACION VARCHAR2(30) DEFAULT 'ADMIN',
  PRIMARY KEY(ID)
);

CREATE TABLE TI_APP_ACTA_ENTREGA_CAB(--CABECERA DE ACTA DE ENTREGA
  ID                   NUMBER NOT NULL, 
  ID_COLABORADOR       NUMBER,--COLABORADOR Y RECIBE
  ID_AREA              NUMBER,
  ID_TELEFONO          NUMBER,
  ID_RESPONSABLE       NUMBER, --ID DEL QUE ENTREGA
  FECHA_ACTA           DATE,
  ESTADO               CHAR(1) DEFAULT 'S' NOT NULL,
  FECHA_INGRESO        DATE DEFAULT SYSDATE,
  USUARIO_INGRESO      VARCHAR2(30) DEFAULT 'ADMIN',
  FECHA_MODIFICACION   DATE DEFAULT SYSDATE,
  USUARIO_MODIFICACION VARCHAR2(30) DEFAULT 'ADMIN',
  PRIMARY KEY(ID)
);

CREATE TABLE TI_APP_ACTA_ENTREGA_DETALLE(--DETALLE DE ACTA DE ENTREGA
  ID                   NUMBER NOT NULL, 
  ID_ACTA_ENTREGA      NUMBER,
  ID_HARDWARE          NUMBER,
  PRIMARY KEY(ID)
);

CREATE TABLE TI_APP_ACTA_ENTREGA_FILE(--FILE DE ACTA DE ENTREGA
  ID                   NUMBER NOT NULL, 
  ID_ACTA_ENTREGA      NUMBER,
  NOMBRE_FILE          VARCHAR2(500),
  RUTA                 VARCHAR2(2000),
  PRIMARY KEY(ID)
);

ALTER TABLE TI_APP_ACTA_ENTREGA_DETALLE
ADD CONSTRAINT FK_AE_DETALL FOREIGN KEY(ID_ACTA_ENTREGA)
REFERENCES TI_APP_ACTA_ENTREGA_CAB(ID);

ALTER TABLE TI_APP_ACTA_ENTREGA_FILE
ADD CONSTRAINT FK_AE_FILE FOREIGN KEY(ID_ACTA_ENTREGA)
REFERENCES TI_APP_ACTA_ENTREGA_CAB(ID);
